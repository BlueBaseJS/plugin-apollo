{
	"extends": "@bluebase/code-standards/tsconfig",
	"compilerOptions": {
		"outDir": "dist",
		"rootDir": ".",
		"typeRoots": ["node_modules/@types"],
		"baseUrl": ".",
		"paths": {
			"*": ["typings/*"]
		},
		"jsx": "react", // Added to remove TS error "Cannot use JSX unless '--jsx' flag is provided"
		"lib": [ "es2015" ]
	},
	"include": ["src/**/*.ts", "src/__tests__/index.test.tsx"],
	"exclude": ["node_modules/**", "**/*.spec.ts", "**/*.test.ts", "**/*.stories.ts"],
	"compileOnSave": false
}
